---
import Header from "../components/Header.astro";
import Sidebar from "../components/Sidebar.astro";
import AboutMe from "../components/AboutMe.astro";
import Skills from "../components/Skills.astro";
import Contact from "../components/Contact.astro";
import Footer from "../components/Footer.astro";
import HamburgerMenu from "../components/HamburgerMenu.astro";
import ProjectList from '../components/ProjectList.astro';

---

<html lang="en">
  <head>
    <title>Pedro Mula Montesinos - Portfolio</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="/src/styles/global.css" rel="stylesheet">
    <script defer src="/src/scripts/sidebar.js"></script>
    <script defer src="/src/scripts/HamburguerMenu.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  </head>
  <body class="flex-1 ml-[25%] p-8 overflow-y-auto h-screen bg-black  bg-fixed bg-cover bg-center text-gray-300" >
    <Sidebar />
    <div class="flex-1 ml-[20%] p-8 overflow-y-auto">
      <HamburgerMenu />
      <Header />
      <main class="max-w-5xl mx-auto space-y-16 mr-[-2%]">
        <section id="about" class="section"><AboutMe /></section>
        <section id="projects" class="section"><ProjectList /></section>
        <section id="skills" class="section"><Skills /></section>
        <section id="contact" class="section"><Contact /></section>
      </main>
      <Footer />
    </div>
  </body>
</html>
