<section id="contact" class="py-16 px-8 max-w-5xl mx-auto">
  <h2 class="text-3xl font-bold text-title-color">Contact</h2>
  
  <p class="mt-4 text-text-color text-lg">
    Do you have a project in mind? Let's talk!
  </p>

  <!-- Contact Information -->
  <div class="mt-6 flex flex-col md:flex-row md:items-center md:justify-between">
    <div class="flex items-center space-x-4">
      <i class="fas fa-phone-alt text-icon-color text-3xl"></i>
      <span class="text-text-color text-lg">+34 657743711</span>
    </div>

    <div class="flex items-center space-x-4 mt-4 md:mt-0">
      <i class="fas fa-envelope text-icon-color text-3xl"></i>
      <a href="mailto:portfpedromm@gmail.com" class="text-link-color text-lg hover:text-hover-color transition-colors">
        portfpedromm@gmail.com
      </a>
    </div>
  </div>

  <!-- Contact Form -->
  <form class="mt-8 space-y-4 bg-card-bg p-6 rounded-lg shadow-md border border-card-border">
    <div class="flex flex-col">
      <label for="name" class="text-label-color">Name</label>
      <input type="text" id="name" placeholder="Your name" class="bg-input-bg text-input-text p-2 rounded focus:ring focus:ring-focus-color">
    </div>

    <div class="flex flex-col">
      <label for="phone" class="text-label-color">Phone Number</label>
      <input type="tel" id="phone" placeholder="Your contact number" class="bg-input-bg text-input-text p-2 rounded focus:ring focus:ring-focus-color">
    </div>

    <div class="flex flex-col">
      <label for="email" class="text-label-color">Email</label>
      <input type="email" id="email" placeholder="Your email" class="bg-input-bg text-input-text p-2 rounded focus:ring focus:ring-focus-color">
    </div>

    <div class="flex flex-col">
      <label for="message" class="text-label-color">Message</label>
      <textarea id="message" placeholder="Write your message..." class="bg-input-bg text-input-text p-2 rounded focus:ring focus:ring-focus-color h-28"></textarea>
    </div>

    <button class="bg-button-bg text-button-text p-2 rounded w-full font-semibold hover:bg-hover-button transition-colors">
      Send Message
    </button>
  </form>
</section>
