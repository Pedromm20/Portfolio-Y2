<section id="contact" class="py-16 px-8 max-w-5xl mx-auto">
  <h2 class="text-3xl font-bold text-green-400">Contact</h2>
  
  <p class="mt-4 text-gray-300 text-lg">
    Do you have a project in mind? Let's talk!
  </p>

  <!-- Contact Information -->
  <div class="mt-6 flex flex-col md:flex-row md:items-center md:justify-between">
    <div class="flex items-center space-x-4">
      <i class="fas fa-phone-alt text-green-400 text-3xl"></i>
      <span class="text-gray-300 text-lg">+34 657743711</span>
    </div>

    <div class="flex items-center space-x-4 mt-4 md:mt-0">
      <i class="fas fa-envelope text-green-400 text-3xl"></i>
      <a href="mailto:portfpedromm@gmail.com" class="text-gray-300 text-lg hover:text-green-400 transition-colors">
        portfpedromm@gmail.com
      </a>
    </div>
  </div>

  <!-- Contact Form -->
  <form class="mt-8 space-y-4 bg-gray-800 p-6 rounded-lg shadow-md">
    <div class="flex flex-col">
      <label for="name" class="text-gray-400">Name</label>
      <input type="text" id="name" placeholder="Your name" class="bg-gray-700 text-white p-2 rounded focus:ring focus:ring-green-400">
    </div>

    <div class="flex flex-col">
      <label for="phone" class="text-gray-400">Phone Number</label>
      <input type="tel" id="phone" placeholder="Your contact number" class="bg-gray-700 text-white p-2 rounded focus:ring focus:ring-green-400">
    </div>

    <div class="flex flex-col">
      <label for="email" class="text-gray-400">Email</label>
      <input type="email" id="email" placeholder="Your email" class="bg-gray-700 text-white p-2 rounded focus:ring focus:ring-green-400">
    </div>

    <div class="flex flex-col">
      <label for="message" class="text-gray-400">Message</label>
      <textarea id="message" placeholder="Write your message..." class="bg-gray-700 text-white p-2 rounded focus:ring focus:ring-green-400 h-28"></textarea>
    </div>

    <button class="bg-green-400 text-black p-2 rounded w-full font-semibold hover:bg-green-500 transition-colors">
      Send Message
    </button>
  </form>
</section>
