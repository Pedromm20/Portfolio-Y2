---

<section id="skills" class="py-16 px-8">
  <h2 class="text-3xl font-bold text-green-400">Skills</h2>

  <!-- Hard Skills -->
  <h3 class="text-2xl font-semibold mt-6 text-white">Hard Skills</h3>
  <div class="grid grid-cols-2 sm:grid-cols-4 lg:grid-cols-5 gap-6 mt-4">
    <div class="flex flex-col items-center">
      <i class="fab fa-html5 text-orange-500 text-3xl"></i>
      <span class="text-sm mt-2">HTML</span>
    </div>
    <div class="flex flex-col items-center">
      <i class="fab fa-css3-alt text-blue-500 text-3xl"></i>
      <span class="text-sm mt-2">CSS</span>
    </div>
    <div class="flex flex-col items-center">
      <i class="fab fa-js text-yellow-400 text-3xl"></i>
      <span class="text-sm mt-2">JavaScript</span>
    </div>
    <div class="flex flex-col items-center">
      <i class="fab fa-php text-indigo-500 text-3xl"></i>
      <span class="text-sm mt-2">PHP</span>
    </div>
    <div class="flex flex-col items-center">
      <i class="fas fa-database text-gray-500 text-3xl"></i>
      <span class="text-sm mt-2">SQL</span>
    </div>
    <div class="flex flex-col items-center">
      <i class="fab fa-angular text-red-500 text-3xl"></i>
      <span class="text-sm mt-2">Angular</span>
    </div>
    <div class="flex flex-col items-center">
      <i class="fab fa-laravel text-red-600 text-3xl"></i>
      <span class="text-sm mt-2">Laravel</span>
    </div>
    <div class="flex flex-col items-center">
      <i class="fas fa-laptop-code text-white text-3xl"></i>
      <span class="text-sm mt-2">Full Stack Development</span>
    </div>
    <div class="flex flex-col items-center">
      <i class="fab fa-git-alt text-orange-600 text-3xl"></i>
      <span class="text-sm mt-2">Git</span>
    </div>
    <div class="flex flex-col items-center">
      <i class="fas fa-network-wired text-blue-400 text-3xl"></i>
      <span class="text-sm mt-2">RESTful API</span>
    </div>
    <div class="flex flex-col items-center">
      <i class="fas fa-check-circle text-green-500 text-3xl"></i>
      <span class="text-sm mt-2">PHPUnit Testing</span>
    </div>
    <div class="flex flex-col items-center">
      <i class="fas fa-mobile-alt text-cyan-400 text-3xl"></i>
      <span class="text-sm mt-2">Responsive Design</span>
    </div>
    <div class="flex flex-col items-center">
      <i class="fas fa-project-diagram text-purple-400 text-3xl"></i>
      <span class="text-sm mt-2">Scrum / Kanban</span>
    </div>
    <div class="flex flex-col items-center">
      <img src="/astro-icon.jpg" class="text-gray-100 h-10 rounded-xl" />
      <span class="text-sm mt-2">Astro</span>
    </div>
    <div class="flex flex-col items-center">
      <i class="fab fa-js text-blue-500 text-3xl"></i>
      <span class="text-sm mt-2">Typescript</span>
  </div>
</section>

<!-- Soft Skills -->
<h3 class="text-2xl font-semibold mt-10 text-white">Soft Skills</h3>
<div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-6 mt-4">
  <div class="flex flex-col items-center">
    <i class="fas fa-users text-blue-300 text-3xl"></i>
    <span class="text-sm mt-2">Teamwork</span>
  </div>
  <div class="flex flex-col items-center">
    <i class="fas fa-lightbulb text-yellow-300 text-3xl"></i>
    <span class="text-sm mt-2">Problem-solving</span>
  </div>
  <div class="flex flex-col items-center">
    <i class="fas fa-clock text-green-300 text-3xl"></i>
    <span class="text-sm mt-2">Time management</span>
  </div>
  <div class="flex flex-col items-center">
    <i class="fas fa-comments text-purple-300 text-3xl"></i>
    <span class="text-sm mt-2">Effective communication</span>
  </div>
  <div class="flex flex-col items-center">
    <i class="fas fa-brain text-pink-400 text-3xl"></i>
    <span class="text-sm mt-2">Continuous learning</span>
  </div>
  <div class="flex flex-col items-center">
    <i class="fas fa-sync-alt text-orange-300 text-3xl"></i>
    <span class="text-sm mt-2">Adaptability</span>
  </div>
  <div class="flex flex-col items-center">
    <i class="fas fa-search text-red-300 text-3xl"></i>
    <span class="text-sm mt-2">Critical thinking</span>
  </div>
  <div class="flex flex-col items-center">
    <i class="fas fa-heart text-teal-400 text-3xl"></i>
    <span class="text-sm mt-2">Empathy with users</span>
  </div>
  <div class="flex flex-col items-center">
    <i class="fas fa-balance-scale text-gray-400 text-3xl"></i>
    <span class="text-sm mt-2">Stress management</span>
  </div>
</div>
</section>
